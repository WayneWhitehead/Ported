<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_top</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>
        <item name="android:homeAsUpIndicator">@drawable/menu</item>
    </style>

    <style name="AppThemeYellow" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/yellowPrimary</item>
        <item name="android:colorPrimaryDark">@color/yellowPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_top</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>
        <item name="android:homeAsUpIndicator">@drawable/menu</item>
    </style>

    <style name="AppThemeGreen" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/greenPrimary</item>
        <item name="android:colorPrimaryDark">@color/greenPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_top</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>
        <item name="android:homeAsUpIndicator">@drawable/menu</item>
    </style>

    <style name="AppThemeRed" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/redPrimary</item>
        <item name="android:colorPrimaryDark">@color/redPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_top</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>
        <item name="android:homeAsUpIndicator">@drawable/menu</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
